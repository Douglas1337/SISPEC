<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verde1"
    tools:context="com.example.douglas.myapplication.Telas.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15sp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtLogin"
            android:hint="LOGIN"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"/>
        <EditText
            android:id="@+id/edtPswd1"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"/>
        <EditText
            android:id="@+id/edtPswd2"
            android:hint="Digite sua senha novamente"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25sp"/>

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="match_parent"
            android:onClick="callRegistar"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:background="@drawable/botao_customizado"
            android:textSize="25sp"
            android:text="@string/Registrar" />

    </LinearLayout>

</LinearLayout>